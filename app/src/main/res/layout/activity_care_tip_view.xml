<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareTipView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#F6E6D1"
        android:padding="16dp">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="361dp"
            android:layout_height="380dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="hy"
            android:src="@drawable/dog_foods" />

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="315dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/pet_diet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Ensure your pet gets a balanced diet tailored to their species, age, and health condition."
                android:textColor="#000000"
                android:textSize="20sp" />
            <!-- Text: Avoid Toxic Items -->
            <TextView
                android:id="@+id/avoid_human_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Avoid feeding human food, especially toxic items like chocolate (for dogs and cats), onions, garlic, or grapes."
                android:textColor="#000000"
                android:textSize="20sp" />

            <!-- Text: Provide Fresh Water -->
            <TextView
                android:id="@+id/provide_clean_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Provide fresh, clean water at all times."
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Top Section: Image -->
</androidx.constraintlayout.widget.ConstraintLayout>