<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Your existing views inside ConstraintLayout -->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfile"
            android:layout_width="61dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="90dp"
            android:src="@drawable/girl"
            app:flow_horizontalBias="0.496"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.005"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/adlam_display"
            android:text="Paw Pedicab"
            android:textColor="#7B5D28 "
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toEndOf="@+id/userProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="363dp"
            android:layout_height="54dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/rounded_search_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textName">
        </SearchView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="387dp"
            android:layout_height="166dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:srcCompat="@drawable/homebg" />

        <TextView
            android:id="@+id/textShareexperince"
            android:layout_width="225dp"
            android:layout_height="108dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="44dp"
            android:text="Share Your Experience With Us !"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="347dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:text="Categories"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.203"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="388dp"
            android:layout_height="94dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="444dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageDog"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dog" />

            <ImageView
                android:id="@+id/imageCat"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageRab"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20px"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageFish"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="1dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/fish" />
        </LinearLayout>

        <Button
            android:id="@+id/viewCategory"
            android:layout_width="146dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D8790D"
            android:text="View All"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="392dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#FCEDDE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewCategory">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/heart" />

            <TextView
                android:id="@+id/txt_caretips"
                android:layout_width="155dp"
                android:layout_height="44dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:text="Care Tips"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="392dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:background="#FFDEBD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="86dp"
                android:layout_height="58dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/faq" />

            <TextView
                android:id="@+id/txt_faq"
                android:layout_width="155dp"
                android:layout_height="44dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:text="FAQ"
                android:textSize="24sp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
    <!-- Bottom navigation bar -->
    <include
        android:id="@+id/bottom_nav_bar"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>