            <!-- Meal Plan Section -->
            <LinearLayout
                android:id="@+id/mealPlanSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"> <!-- Visible by default -->

                <!-- Meal Plan Title and Text as before -->
                <TextView
                    android:id="@+id/mealPlanTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="20dp"
                    android:text="Meal Plan"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="@font/adlam_display"/>

                <TextView
                    android:id="@+id/mealPlanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="The best food to feed a German Shepherd is one that is rich in protein and fat content..."
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <!-- Image Carousel as before -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/meal1" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/meal2" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/meal3" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Lifetime Section -->
            <LinearLayout
                android:id="@+id/lifetimeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="20dp"
                    android:text="Life Span Information"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="@font/adlam_display"/>
                <TextView
                    android:id="@+id/lifeSpanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="The average lifespan of a German Shepherd is typically 9 to 13 years. Several factors can influence their lifespan, including genetics, diet, exercise, and healthcare"
                    android:textColor="#555555"
                    android:textSize="18sp" />
                <!-- Image Carousel as before -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/lifetime" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Vitamins Section -->
            <LinearLayout
                android:id="@+id/vitaminsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="20dp"
                    android:text="Vitamins"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="@font/adlam_display"/>
                <TextView
                    android:id="@+id/vitaminText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Among essential vitamins for dogs are vitamins A, B, C, D, E, and K"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <!-- Image Carousel as before -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vitamin1" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vitamin2" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vitamin3" />
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vitamin1" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


            <!-- Comment Section -->
            <TextView
                android:id="@+id/shareThoughtsTitle"
                android:layout_width="194dp"
                android:layout_height="46dp"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/adlam_display"
                android:textAlignment="center"
                android:text="Share Your Thoughts !"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Submit Button -->
            <EditText
                android:id="@+id/commentsEditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:background="@drawable/edittext_shadow"
                android:hint="Comments"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />

            <Button
                android:id="@+id/Csubmit"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#D8790D"
                android:text="Submit"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <!-- Bottom Navigation Bar -->
    <include
        android:id="@+id/bottom_nav_bar"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</FrameLayout>
