<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SinglePet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            tools:ignore="MissingConstraints">

            <!-- Title -->
            <TextView
                android:id="@+id/breedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="German Shepherd"
                android:textColor="#000000"
                android:textSize="26sp"
                android:fontFamily="@font/adlam_display"
                android:gravity="center"/>

            <!-- Main Image -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/carouselImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" />

            <!-- Round Profile Image with Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/germanshepherd"
                    android:background="@drawable/germanshepherd" />

                <TextView
                    android:id="@+id/breedDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal Height : 60-65 cm\nNormal weight : 30-40 kg\nNormal width : 70-86 cm"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Description Section -->
            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="18sp"
                android:fontFamily="@font/adlam_display"/>

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Intelligent, confident, and courageous. Often used as working dogs in police and military roles."
                android:textColor="#555555"
                android:textSize="18sp" />

            <!-- Button Group -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/lifetimeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFD3A7"
                    android:layout_marginEnd="8dp"
                    android:text="Life Time"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/mealPlanButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFD3A7"
                    android:layout_marginEnd="8dp"
                    android:text="Meals"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/vitaminsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#FFD3A7"
                    android:text="Vitamins"
                    android:textColor="#000000" />
            </LinearLayout>

