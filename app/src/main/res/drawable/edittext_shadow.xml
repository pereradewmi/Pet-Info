<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#80000000"/> <!-- Semi-transparent black shadow -->
            <corners android:radius="8dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- EditText Background -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FBE2C8"/> <!-- Your background color -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
